@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edytuj użytkownika</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <input asp-for="Id" disabled class="form-control" disabled />
        </div>
        <div class="form-group row">
            <label asp-for="UserName">Nazwa użytkownika</label>
            <input asp-for="UserName" class="form-control"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Email">Adres Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ShortName">Skrócona nazwa</label>
            <input asp-for="ShortName" class="form-control" />
        </div>
        <div class="form-group row">
            <label asp-for="Street">Ulica</label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="City">Miasto</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="form-group row">
            <label asp-for="PostCode">Kod pocztowy</label>
            <input asp-for="PostCode" class="form-control" />
        </div>
        <div class="form-group row">
            <label asp-for="Country">Państwo</label>
            <input asp-for="Country" class="form-control" />
        </div>
        <div class="form-group row">
            <label asp-for="NIP">NIP</label>
            <input asp-for="NIP" class="form-control" />
        </div>
        <div class="form-group row">
            <label asp-for="ContactPerson">Osoba kontaktowa</label>
            <input asp-for="ContactPerson" class="form-control" />
        </div>
        <div class="form-group row">
            <label asp-for="Comments">Dodatkowe informacje</label>
            <textarea asp-for="Comments" rows="5" cols="40" class="form-control"></textarea>
        </div>
        <div class="form-group row">
            <label asp-for="ContactPhone">Telefon kontaktowy</label>
            <input asp-for="ContactPhone" class="form-control" />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Zaktualizuj</button>
            <a asp-action="ListUsers" class="btn btn-primary">Przerwij</a>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h3>Role użytkowników</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">Brak ról</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ListRoles" asp-route-id="@Model.Id" style="width:auto" class="btn btn-primary">
                Zarządzaj rolami
            </a>
        </div>
    </div>
</form>
