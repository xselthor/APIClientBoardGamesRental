@model IEnumerable<ApplicationRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>Role w systemie</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="admin">Stwórz rolę</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id" class="btn btn-danger">Zmień</a>
                    <button type="submit" href="#" class="btn btn-danger" onclick="return confirm('Czy jesteś pewien że chcesz usunąć rolę: @role.Name?')">Usuń</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Jeszcze nie mamy żadnych ról
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Użyj przycisku poniżej do utworzenia nowej roli
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Stwórz rolę
            </a>
        </div>
    </div>
}