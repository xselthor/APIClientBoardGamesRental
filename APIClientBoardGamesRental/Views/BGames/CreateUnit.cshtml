@model BUnit
@{
    ViewData["Title"] = "Dodaj Egzemplarz";
}

<h1>Dodaj egzemplarz</h1>

<hr />

<form asp-action="CreateUnit" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="gameid" class="control-label">Game ID: @Model.gameid</label>
        <input asp-for="gameid" class="form-control" hidden />
        <span asp-validation-for="gameid" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="barcode" class="control-label">Kod kreskowy</label>
        <input asp-for="barcode" class="form-control" />
        <span asp-validation-for="barcode" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="description" class="control-label">Opis egzemplarza</label>
        <textarea asp-for="description" rows="5" cols="40" class="form-control"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Details" asp-route-id="@Model.gameid">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
